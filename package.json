{
  "name": "wingman-goose",
  "displayName": "Wingman Goose",
  "description": "Goose AI for VSCode",
  "version": "0.1.9",
  "repository": {
    "type": "git",
    "url": "https://github.com/cloud-on-prem/wingman"
  },
  "license": "Apache-2.0",
  "icon": "resources/goose-icon.png",
  "publisher": "prempillai",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "goose",
          "title": "Goose",
          "icon": "resources/goose-icon-dark.svg"
        }
      ]
    },
    "views": {
      "goose": [
        {
          "type": "webview",
          "id": "goose.chatView",
          "name": "Chat"
        }
      ]
    },
    "configuration": {
      "title": "Goose",
      "properties": {
        "goose.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the Goose extension"
        },
        "goose.logLevel": {
          "type": "string",
          "enum": [
            "none",
            "error",
            "warn",
            "info",
            "debug"
          ],
          "default": "info",
          "description": "Control the verbosity of log messages (none, error, warn, info, debug)"
        },
        "goose.server.path": {
          "type": "string",
          "default": "",
          "description": "Custom path to the Goose Desktop installation. Leave empty for auto-detection."
        }
      }
    },
    "commands": [
      {
        "command": "goose.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "goose.start",
        "title": "Start Goose"
      },
      {
        "command": "goose.startServer",
        "title": "Goose: Start Server"
      },
      {
        "command": "goose.stopServer",
        "title": "Goose: Stop Server"
      },
      {
        "command": "goose.askAboutSelection",
        "title": "Ask Goose about this code"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "goose.askAboutSelection",
          "when": "editorHasSelection",
          "group": "goose"
        }
      ]
    },
    "keybindings": [
      {
        "command": "goose.askAboutSelection",
        "key": "ctrl+alt+g",
        "mac": "cmd+opt+g",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "package": "npm run clean && npm run test:all && npm run compile && npx @vscode/vsce package --no-yarn",
    "package:dist": "npm run clean && mkdir -p dist && npm run compile && npx @vscode/vsce package --no-yarn -o dist/goose-vscode-$npm_package_version.vsix",
    "package:skip-tests": "npm run clean && npm run compile && npx @vscode/vsce package --no-yarn",
    "package:inspect": "npx @vscode/vsce ls --no-yarn",
    "package:verify": "npx @vscode/vsce ls --tree",
    "build:extension": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "compile:tests": "tsc -p ./",
    "compile": "npm run build:extension && npm run compile:tests && npm run build:webview",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:package": "node ./out/test/runPackageTest.js",
    "test:webview": "cd webview-ui && npm run test",
    "test:all": "npm run lint && npm run test && npm run test:webview",
    "build:webview": "cd webview-ui && npm install && npm run build",
    "dev:webview": "cd webview-ui && npm run dev",
    "clean": "rimraf out && rimraf webview-ui/dist && rimraf *.vsix && rimraf dist"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.24",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "autoprefixer": "^10.4.16",
    "esbuild": "^0.25.3",
    "eslint": "^9.21.0",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^6.0.1",
    "sinon": "^19.0.4",
    "tailwindcss": "^3.3.6",
    "vite": "^6.3.4"
  },
  "dependencies": {
    "typescript": "^5.8.2",
    "yaml": "^2.4.5"
  }
}
